@using Corelibs.Basic.Functional
<div class=@($@"
    relative min-w-[65px] w-fit flex flex-col h-fit
    items-center justify-center
    transition transform duration-150 
    hover:scale-[1.10] hover:-mx-[2px] hover:font-bold {Class}")>

    @if (OriginalEnabled)
    {
        <h5 class=@($@"anim text-black cursor-pointer
            -translate-y-[5px] nowrap")
            style=@($@"
            font-family: kaisei;
            font-size: 40px;
            z-index: 10;
            text-shadow: 0 0 10px gray;")>
            @MainText
        </h5>
    }
    @if (HiraganaEnabled)
    {
        <h6 class="">@HiraganaText</h6>
    }
    @if (MeaningEnabled)
    {
        <h6 class="">@MeaningText</h6>
    }
</div>

@code {
    [Parameter] public string Class { get; set; }

    [Parameter] public string? MainText { get; set; }
    [Parameter] public string? MeaningText { get; set; }
    [Parameter] public string? HiraganaText { get; set; }

    [Parameter] public bool OriginalEnabled { get; set; } = true;
    [Parameter] public bool MeaningEnabled { get; set; } = true;
    [Parameter] public bool HiraganaEnabled { get; set; } = true;
}
