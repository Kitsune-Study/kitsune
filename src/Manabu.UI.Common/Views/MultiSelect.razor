
<MudSelect T=string Label=@Name MultiSelection=true @bind-SelectedValues=@_selected>
    @foreach (var value in Values)
    {
        <MudSelectItem T="string" Value=@value>@value</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public string[] Values { get; set; }

    private IEnumerable<string> _selected { get; set; }

    protected override void OnInitialized()
    {
        _selected = new HashSet<string>(Values);
    }
}
