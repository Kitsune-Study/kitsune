
<MudSelect T=string Label=@Name MultiSelection=true @bind-SelectedValues=@Selected>
    @foreach (var value in Values)
    {
        <MudSelectItem T="string" Value=@value>@value</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public string[] Values { get; set; }

    public IEnumerable<string> Selected { get; set; }

    protected override void OnInitialized()
    {
        Selected = new HashSet<string>(Values);
    }
}
