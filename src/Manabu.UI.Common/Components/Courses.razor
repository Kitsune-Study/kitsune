@using Corelibs.Basic.Reflection;
@using Manabu.UseCases.Courses;
@using Microsoft.AspNetCore.Components.Authorization;

@inherits CoreComponent

@if  (_courses is null) { return; }

<MudStack Class="main-section courses" Style="width: 100%;">
    <SiteTitle>@SiteTitle.Name</SiteTitle>

    <SimpleList 
        Name="Official Courses"
        IsReadonly=@(!_isEdit)
        OnAddItem=@OnAddItem
        MenuItemsRoot=@CoursesMenuItemsRoot
        OnItemClick=@OnItemClick
        CreateCustomItemData=@CreateCustomItemData
        Items=@(_items.CastToList<SimpleList.ItemData>())>
        
        <CustomItemTemplate>
            @{
                var item = context as CourseItemData;
                <CourseItem
                    Title=@item.Name
                    Author=@item.Author />
            }
        </CustomItemTemplate>
    </SimpleList>

    @if (_isAdmin)
    {
        <MudSwitch @bind-Checked=@_isEdit Label="Edit Mode" Color="Color.Info" />
    }
</MudStack>

@code {
    private List<EditableList.TreeItemData> _treeItems;
    private List<CourseItemData> _items;

    [Inject] public State.SiteTitle SiteTitle { get; set; }

    private CourseDTO[]? _courses;
    private List<List.ListItem>? _listItems;

    protected override async Task OnInitializedAsyncImpl()
    {
        SiteTitle.Rename("COURSES");

        await RefreshViewModel();
    }

    private async Task<bool> OnAddItem(
        SimpleList.ItemData item, int index, MenuItem menuItem)
    {
        if (!await Auth.IsAdmin())
            return false;

        await CommandExecutor.Execute(new CreateCourseCommand(item.Name));
        await RefreshView();

        return true;
    }

    private async Task OnItemClick(SimpleList.ItemData item)
    {
        Navigation.NavigateTo($"courses/{item.Id}");
    }

    private SimpleList.ItemData CreateCustomItemData(int index)
    {
        return new CourseItemData("", "New Course", "");
    }

    protected override async Task RefreshViewModel()
    {
        var response = await QueryExecutor.Execute<GetCoursesQuery, GetCoursesQueryResponse>();

        _courses = response?.Courses;
        _items = _courses?.Select(c => new CourseItemData(c.Id, c.Name, ""))?.ToList();
    }

    private MenuItem[] MenuItemsRoot = new MenuItem[]
    {
        MenuItems.AddChildAsLast with { Name = "Add Course", IdSecondary = "addCourse"},
        MenuItems.AddChildAsFirst with { Name = "Add Course at Start", IdSecondary = "addCourse" },
    };

    private MenuItem[] CoursesMenuItemsRoot = new MenuItem[]
    {
        MenuItems.AddChildAsLast with { Name = "Add Course", IdSecondary = "addCourse"},
        MenuItems.AddChildAsFirst with { Name = "Add Course at Start", IdSecondary = "addCourse" },
    };

    public class CourseItemData : SimpleList.ItemData
    {
        public string Author { get; }

        public CourseItemData(string id, string name, string author) : base(id, name)
        {
            Author = author;
        }
    }
}
